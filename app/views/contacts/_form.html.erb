<%= form_for(@contact, html: { class: "basic-grey" }) do |f| %>
  <h1><%= t('titles.contacts') %></h1>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :kind_id %><br>
	<%= f.collection_select(:kind_id, @kind_options_for_select, :id, :description) %>
  </div>

	<%= f.fields_for :adress do |adress_fields| %>
		<div class="field">
			<%= adress_fields.label :street %><br>
			<%= adress_fields.text_field :street %>
		</div>
		<div class="field">
			<%= adress_fields.label :city %><br>
			<%= adress_fields.text_field :city %>
		</div>
		<div class="field">
			<%= adress_fields.label :state %><br>
			<%= adress_fields.select :state, options_for_states(@contact.adress.state) %>
		</div>
  <% end %>

  <div id="phones"> 
    <%= f.fields_for :phones do |phones_fields| %>
      <%= render partial: "phone_fields", locals: { f: phones_fields } %>
    <% end %> 

    <div class="field">
      <%= f.label :phone, ">" %><br>
      <%= link_to_add_association('[Adicionar Telefone]', f, :phones) %>
    </div>
  </div>  


   <div class="field">
    <%= f.label :rmk %><br>
    <%= f.text_area :rmk %>
  </div>
  <div class="actions">
    <%= f.submit "Enviar", class: "button" %>
    <%= link_to 'Back', contacts_path, class: "button" %>
  </div>

   <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= "#{pluralize(@contact.errors.count, t('messages.error'))} #{t('messages.errors_msg')}:" %> </h2>

      <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% end %>
